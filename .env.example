############################################################
# Example Environment File (safe to commit)                #
# Copy to .env or .env.local and fill in secrets locally.  #
############################################################

NODE_ENV=development
PORT=3001

# --- Database ---
MONGODB_URI=mongodb://localhost:27017/crm
JWT_SECRET=change-me-for-local-only

# --- Frontend / URLs ---
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3005
FRONTEND_URL=http://localhost:3005
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3005

# --- OAuth (leave blank unless testing) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# --- Billing / Stripe (optional) ---
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_TRIAL_DAYS=14
NEXT_PUBLIC_STRIPE_PRICE_STARTER=
NEXT_PUBLIC_STRIPE_PRICE_GROWTH=

# --- AI Providers (populate those you use) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
XAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
GOOGLE_GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro
DISABLE_GEMINI=true
NEXT_PUBLIC_COPILOT_CHAT_ONLY=true
NEXT_PUBLIC_COPILOT_SYSTEM_PROMPT=You are an AI CRM copilot. Provide concise helpful answers.
NEXT_PUBLIC_COPILOT_SUPPRESS_WARNINGS=true

# --- Vector / Embeddings (optional) ---
PINECONE_API_KEY=
PINECONE_INDEX=crm-context
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=

# --- Notifications & Realtime ---
ENABLE_IN_APP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATIONS_QUEUE_REDIS_URL=redis://localhost:6379/5
EMAIL_QUEUE_REDIS_URL=redis://localhost:6379/4
SMS_QUEUE_REDIS_URL=redis://localhost:6379/6
WEBSOCKET_PORT=3050
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3005

# --- Voice (optional) ---
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_AGENT_ID=
ELEVENLABS_STREAM_URL=wss://api.elevenlabs.io/v1/convai/stream

# --- Media (optional) ---
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# --- Telephony (optional) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
# --- Cloud Storage (Cloudinary) ---
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# --- Google OAuth / Maps ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# --- Redis / Queues ---
REDIS_URL=redis://localhost:6379

# --- Logging & Security ---
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-min-32-chars

# --- Feature Flags ---
ENABLE_AI_FEATURES=true
ENABLE_VOICE_AGENTS=true
ENABLE_DESIGN_STUDIO=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_TON_WALLET=false

############################################################
# Guidance:
# - Keep real secrets ONLY in untracked .env.local
# - Rotate any leaked production keys immediately.
# - Set DISABLE_GEMINI=true if you don't provide GEMINI_API_KEY.
############################################################

# Environment Configuration for CRM Integrations
# Copy this file to .env.local and fill in your actual API keys

# Database
MONGODB_URI=mongodb://localhost:27017/crm
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google Workspace Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Twilio SMS/Phone Verification
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Cloudinary Image/Video Management
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# SendGrid Email Service
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@yourdomain.com
SENDGRID_FROM_NAME=Your Company Name

# OpenAI for AI Chat Features
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini (Generative AI) for Copilot Chat (alternative / preferred)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro

# Vector / Embeddings (choose one provider)
PINECONE_API_KEY=your-pinecone-key
PINECONE_INDEX=crm-context
UPSTASH_VECTOR_REST_URL=your-upstash-vector-url
UPSTASH_VECTOR_REST_TOKEN=your-upstash-vector-token

# ElevenLabs Voice Agent (Conversational AI Voice)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-default-voice-id
ELEVENLABS_AGENT_ID=your-agent-id
ELEVENLABS_STREAM_URL=wss://api.elevenlabs.io/v1/convai/stream

# Twilio Programmable Voice / Webhook
TWILIO_FUNCTION_BASE_URL=https://your-ngrok-or-domain
TWILIO_INBOUND_VOICE_WEBHOOK=/voice-agent/webhook

# Realtime WebSocket (backend) for voice + notifications
WEBSOCKET_PORT=3050
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002

# Notifications / Messaging
ENABLE_IN_APP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
NOTIFICATIONS_QUEUE_REDIS_URL=redis://localhost:6379/5

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3002

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3001

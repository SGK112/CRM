{
  "workbench.colorTheme": "Default Dark Modern",
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.minimap.enabled": true,
  "editor.minimap.side": "right",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Fira Code', 'SF Mono', Monaco, 'Cascadia Code', monospace",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.showActions": "singleTerminal",
  "terminal.integrated.defaultProfile.osx": "zsh",
  
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/.git": false,
    "**/.DS_Store": true,
    "**/npm-debug.log*": true,
    "**/yarn-debug.log*": true,
    "**/yarn-error.log*": true
  },
  
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },
  
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  
  "eslint.workingDirectories": ["apps/frontend", "apps/backend", "packages/shared"],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json,yarn.lock,pnpm-lock.yaml",
    "*.js": "$(capture).js.map,$(capture).min.js,$(capture).d.ts",
    "*.jsx": "$(capture).js",
    "*.ts": "$(capture).js,$(capture).d.ts.map,$(capture).d.ts,$(capture).js.map",
    "*.tsx": "$(capture).ts",
    "tsconfig.json": "tsconfig.*.json",
    "next.config.js": "next-env.d.ts,.eslintrc.json",
    "tailwind.config.js": "postcss.config.js"
  }
}

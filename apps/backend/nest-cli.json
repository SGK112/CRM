{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": ["**/*.json", "**/*.hbs", "**/*.html"],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": false,
    "flat": true
  }
}

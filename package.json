{
  "name": "remodely-crm",
  "version": "1.0.0",
  "description": "Enterprise CRM system for general contractors and construction companies",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:robust": "./start-dev-robust.sh",
    "dev:monitor": "./monitor-dev.sh",
    "dev:stop": "pkill -f 'npm run dev' && lsof -ti:3000,3001 | xargs kill -9 2>/dev/null || true",
    "dev:status": "lsof -i:3000,3001 && echo '\\n=== Processes ===' && ps aux | grep -E '(nest|3000|3001)' | grep -v grep",
    "build": "turbo run build --cache-dir=.turbo",
    "build:production": "NODE_OPTIONS='--max-old-space-size=1024' turbo run build --cache-dir=.turbo",
    "start": "turbo run start",
    "lint": "turbo run lint --cache-dir=.turbo",
    "test": "turbo run test --cache-dir=.turbo",
    "type-check": "turbo run type-check --cache-dir=.turbo",
    "clean": "rimraf node_modules apps/*/node_modules && rimraf .turbo",
    "clean:cache": "rimraf .turbo apps/*/.next apps/*/dist",
    "backend:dev": "npm run dev --workspace=@remodely-crm/backend",
    "frontend:dev": "npm run dev --workspace=@remodely-crm/frontend"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.1.12",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "crm",
    "construction",
    "contractor",
    "enterprise",
    "nestjs",
    "nextjs",
    "mongodb"
  ],
  "author": "SGK112",
  "license": "MIT",
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "@types/nodemailer": "^7.0.1",
    "mongodb": "^6.19.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.2",
    "twilio": "^5.9.0"
  }
}

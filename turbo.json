{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package-lock.json",
    ".env*"
  ],
  "tasks": {
    "lint": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    }
  },
  "cacheDir": ".turbo"
}
